<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormCadastro"
    android:orientation="vertical"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preencha o formulario de cadastro\n para criar sua conta"
        android:textColor="@color/green_logo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_login"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Nome"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_login"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="E-mail"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_login"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Telefone"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_login"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Idade"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_login"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Altura"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_login"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Peso"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_login"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="senha"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="18sp"
        />


    <Button
        android:id="@+id/bt_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/green_logo"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:cornerRadius="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/mensagem_erro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ERROR"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"

        />




</LinearLayout>